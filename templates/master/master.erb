# puppet managed file

# The address of the interface to bind to:
interface: <%= scope.lookupvar('saltstack::master::interface') %>

# Whether the master should listen for IPv6 connections. If this is set to True,
# the interface option must be adjusted, too. (For example: "interface: '::'")
ipv6: <%= scope.lookupvar('saltstack::master::ipv6') %>

# The tcp port used by the publisher:
publish_port: <%= scope.lookupvar('saltstack::master::publish_port') %>

# The user under which the salt master will run. Salt will update all
# permissions to allow the specified user to run the master. The exception is
# the job cache, which must be deleted if this user is changed. If the
# modified files cause conflicts, set verify_env to False.
user: <%= scope.lookupvar('saltstack::master::user') %>

# The port used by the communication interface. The ret (return) port is the
# interface used for the file server, authentication, job returns, etc.
ret_port: <%= scope.lookupvar('saltstack::master::ret_port') %>

# Set the number of hours to keep old job information in the job cache:
keep_jobs: <%= @keep_jobs %>

# Passing very large events can cause the minion to consume large amounts of
# memory. This value tunes the maximum size of a message allowed onto the
# master event bus. The value is expressed in bytes.
max_event_size: <%= @max_event_size %>

# The hash_type is the hash to use when discovering the hash of a file in
# the local fileserver. The default is md5, but sha1, sha224, sha256, sha384
# and sha512 are also supported.
hash_type: <%= @hash_type %>
